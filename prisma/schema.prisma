generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(cuid())
  name          String
  email         String      @unique
  age           Int
  streakDays    Int         @default(0)
  completedGoals Int        @default(0)
  buddyId       String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  moodEntries   MoodEntry[]
  buddy         User?       @relation("BuddySystem", fields: [buddyId], references: [id])
  buddyOf       User[]      @relation("BuddySystem")
}

model MoodEntry {
  id        String   @id @default(cuid())
  date      String
  mood      Int
  note      String
  userId    String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id])
}






